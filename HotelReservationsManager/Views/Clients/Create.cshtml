@using HotelReservationsManager.Dtos.Clients
@model InputClientDto

<h1>Create room</h1>
<div class="row">
    <div class="col-md-4">
        <section>
            <form id="room" method="post">
               @* <h2>Use a local account to log in.</h2>
                <hr />*@
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                     <input asp-for="@Model.Firstname" class="form-control"  aria-required="true" />
                    <label asp-for="@Model.Firstname" class="form-label"></label>
                   
                </div>
                <div class="form-floating">
                    <input asp-for="@Model.Lastname" class="form-control"  aria-required="true" />
                    <label asp-for="@Model.Lastname" class="form-label"></label>
                
                </div> 
                
                <div class="form-floating">
                    <input asp-for="@Model.PhoneNumber" class="form-control"  aria-required="true" />
                    <label asp-for="@Model.PhoneNumber" class="form-label"></label>
                
                </div> 

                <div class="form-floating">
                    <input asp-for="@Model.Email" class="form-control"  aria-required="true" />
                    <label asp-for="@Model.Email" class="form-label"></label>
                   
                </div>

                 <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsAdult" /> @Html.DisplayNameFor(model => model.IsAdult)
                </label>
                </div>
               
                <div>
                    <button id="room-submit" type="submit" class="w-100 btn btn-lg btn-primary">Add room</button>
                </div>
                <div>                   
                   
                </div>
            </form>
        </section>
    </div>