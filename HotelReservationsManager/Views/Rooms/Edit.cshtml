@using HotelReservationsManager.Dtos.Rooms
@model RoomDto

<h1>Edit room</h1>
<div class="row">
    <div class="col-md-4">
        <section>
            <form id="room" method="post">              
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                     <input asp-for="@Model.Capacity" value="@Model.Capacity" class="form-control"  aria-required="true"  />
                    <label asp-for="@Model.Capacity" class="form-label"></label>
                   
                </div>
                <div class="form-floating">
                    <input asp-for="@Model.Type" value="@Model.Type" class="form-control"  aria-required="true" />
                    <label asp-for="@Model.Type" class="form-label"></label>
                
                </div> 
                
                <div class="form-floating">
                    <input asp-for="@Model.Number" value="@Model.Number" class="form-control"  aria-required="true" />
                    <label asp-for="@Model.Number" class="form-label"></label>
                
                </div> 

                <div class="form-floating">
                    <input asp-for="@Model.AdultPrice" value="@Model.AdultPrice" class="form-control"  aria-required="true" />
                    <label asp-for="@Model.AdultPrice" class="form-label"></label>
                   
                </div>

                <div class="form-floating">
                    <input asp-for="@Model.ChildPrice" value="@Model.ChildPrice" class="form-control"  aria-required="true" />
                    <label asp-for="@Model.ChildPrice" class="form-label"></label>
                  
                </div>
               
                <div class="form-group form-check">
                    <input asp-for="@Model.IsAvaible" value="@Model.IsAvaible" class = "form-check-input" aria-required="true"/> 
                    <label asp-for="@Model.IsAvaible" class = "form-check-label"></label>
                </div>
               
                <div>
                    <button id="room-submit" type="submit" class="w-100 btn btn-lg btn-primary">Edit room</button>
                </div>
                <div>                   
                   
                </div>
            </form>
        </section>
    </div>